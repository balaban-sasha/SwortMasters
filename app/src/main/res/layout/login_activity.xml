<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.saoworld.sm.swortmasters.LoginActivity">

    <Button
        android:text="Login"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/loginReqeust"
        tools:width="180dp"
        android:layout_below="@+id/textPassword"
        android:layout_centerHorizontal="true"
        tools:layout_width="200dp"
        android:layout_width="wrap_content" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_marginTop="105dp"
        android:id="@+id/textEmail"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:hint="Email" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginTop="38dp"
        android:id="@+id/textPassword"
        android:layout_below="@+id/textEmail"
        android:layout_alignParentStart="true"
        android:hint="Password" />

    <Button
        android:text="Registry"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:id="@+id/registryRequest"
        android:onClick="registryRequest"
        tools:layout_width="200dp"
        android:layout_below="@+id/loginReqeust"
        android:layout_alignStart="@+id/loginReqeust"
        android:layout_width="wrap_content" />

</RelativeLayout>
