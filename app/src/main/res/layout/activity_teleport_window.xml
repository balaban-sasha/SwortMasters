<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_teleport_window"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.saoworld.sm.swortmasters.bin.subsidiary.teleport.TeleportWindow">

    <include android:layout_width="fill_parent" layout="@layout/bottom_navigation"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:id="@+id/bottom_nav"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/cityText" />

    <TextView
        android:text="Teleport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:id="@+id/tpText"
        android:layout_below="@+id/cityText"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/cityList" />
</RelativeLayout>
